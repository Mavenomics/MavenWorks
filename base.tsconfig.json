{
    "$schema": "https://schemastore.azurewebsites.net/schemas/json/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "composite": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "noErrorTruncation": true,
        "experimentalDecorators": true,
        "lib": [
            "es2018",
            "dom",
            "dom.iterable",
            "webworker"
        ],
        "jsx": "react"
    }
}